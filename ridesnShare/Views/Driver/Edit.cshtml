@model ridesnShare.Models.DriverDTO

@{
    ViewBag.Title = "Update";
}
<!--this form updates a driver into the system-->
<h2>Update Driver</h2>

<form action="/Driver/Update" method="POST">
    <!-- Add a hidden input field for the id -->
    <input type="hidden" name="id" value="@Model.DriverId" />

    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="@Model.firstName" />
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="@Model.lastName" />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="@Model.email" />
    </div>
    <div>
        <input type="submit" value="Update Driver" />
    </div>
</form>
