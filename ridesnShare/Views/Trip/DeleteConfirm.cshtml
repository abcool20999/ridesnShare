@model ridesnShare.Models.TripDTO
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this trip</h2>
<a href="/Passenger/List">Cancel</a>
<h3>@Model.startLocation</h3>
<h3>@Model.endLocation</h3>
<h3>@Model.price</h3>
<h3>@Model.Time</h3>
<h3>@Model.dayOftheweek</h3>
<form action="/Passenger/Delete/@Model.passengerId" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>