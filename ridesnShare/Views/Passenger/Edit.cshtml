@model ridesnShare.Models.Passenger

@{
    ViewBag.Title = "Update Passenger";
}

<h2>Update Passenger</h2>

<form action="/Passenger/Update" method="post">
    <!-- Add a hidden input field for the id -->
    <input type="hidden" name="id" value="@Model.passengerId" />

    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="@Model.firstName" />
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="@Model.lastName" />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="@Model.email" />
    </div>
    <div>
        <input type="submit" value="Update Passenger" />
    </div>
</form>
